{
    "name": "vscode-kite",
    "displayName": "KiteConnect",
    "description": "KiteConnect API",
    "version": "0.0.1",
    "publisher": "mrkaran",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.getQuote",
        "onCommand:extension.fetchMargin"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "properties": {
                "vscode-kite.symbols": {
                    "type": "array",
                    "default": [
                        "INFY",
                        "CDSL"
                    ],
                    "description": "Stocks that you want to track"
                },
                "vscode-kite.exchange": {
                    "type": "string",
                    "default": "NSE",
                    "description": "Fetch data from exchange. Default: NSE"
                },
                "vscode-kite.api_key": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for KiteConnect App"
                },
                "vscode-kite.access_token": {
                    "type": "string",
                    "default": "",
                    "description": "Access Token for KiteConnect API"
                }
            }
        },
        "commands": [
            {
                "command": "extension.getQuote",
                "title": "Quote",
                "category": "Kite",
                "arguments": "symbol"
            },
            {
                "command": "extension.fetchMargin",
                "title": "Margin",
                "category": "Kite"
            }
        ]
    },

    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "kiteconnect": "^1.2.2"
    }
}
